{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "PatchPal MCP Server Configuration Example",
  "mcp": {
    "example_server": {
      "type": "local",
      "command": ["python", "examples/mcp/simple_server.py"],
      "enabled": true,
      "environment": {},
      "description": "Example MCP server included with PatchPal"
    },
    "congress": {
      "type": "remote",
      "url": "https://congress-mcp-an.fastmcp.app/mcp",
      "enabled": false,
      "headers": {},
      "description": "Congress.gov MCP server (remote, hosted by FastMCP)"
    },
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "/path/to/allowed/directory"],
      "enabled": false,
      "environment": {},
      "description": "File system access (official reference server)"
    },
    "memory": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"],
      "enabled": false,
      "environment": {},
      "description": "Knowledge graph-based persistent memory (official reference server)"
    },
    "fetch": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-fetch"],
      "enabled": false,
      "environment": {},
      "description": "Web content fetching and conversion (official reference server)"
    },
    "custom_remote_with_auth": {
      "type": "remote",
      "url": "https://your-custom-mcp-server.example.com/mcp",
      "enabled": false,
      "headers": {
        "Authorization": "Bearer YOUR_API_TOKEN_HERE"
      },
      "description": "Example of remote MCP server with authentication"
    }
  }
}
