{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "PatchPal MCP Server Configuration Example",
  "mcp": {
    "example_server": {
      "type": "local",
      "command": ["python", "examples/mcp/simple_server.py"],
      "enabled": true,
      "environment": {},
      "description": "Example MCP server included with PatchPal"
    },
    "congress": {
      "type": "remote",
      "url": "${CONGRESS_API_URL:-https://congress-mcp-an.fastmcp.app/mcp}",
      "enabled": false,
      "headers": {
        "Authorization": "Bearer ${CONGRESS_API_KEY}"
      },
      "description": "Congress.gov MCP server (remote, hosted by FastMCP). Set CONGRESS_API_KEY env var if authentication is required."
    },
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "/path/to/allowed/directory"],
      "enabled": false,
      "environment": {},
      "description": "File system access (official reference server)"
    },
    "memory": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"],
      "enabled": false,
      "environment": {},
      "description": "Knowledge graph-based persistent memory (official reference server)"
    },
    "fetch": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-fetch"],
      "enabled": false,
      "environment": {},
      "description": "Web content fetching and conversion (official reference server)"
    },
    "database_with_env_vars": {
      "type": "local",
      "command": ["npx", "-y", "@bytebase/dbhub"],
      "enabled": false,
      "environment": {
        "DB_HOST": "${DATABASE_HOST:-localhost}",
        "DB_PORT": "${DATABASE_PORT:-5432}",
        "DB_NAME": "${DATABASE_NAME}",
        "DB_USER": "${DATABASE_USER}",
        "DB_PASSWORD": "${DATABASE_PASSWORD}"
      },
      "description": "Example: Database server with environment variable expansion"
    },
    "custom_remote_with_auth": {
      "type": "remote",
      "url": "${CUSTOM_MCP_URL:-https://api.example.com/mcp}",
      "enabled": false,
      "headers": {
        "Authorization": "Bearer ${CUSTOM_API_TOKEN}",
        "X-API-Key": "${CUSTOM_API_KEY}"
      },
      "description": "Example: Remote MCP server with environment variable authentication"
    }
  }
}
